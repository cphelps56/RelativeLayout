<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.louisville.relativelayout.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/buttonRock1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/buttonPaper1"
        android:layout_above="@id/buttonRock1"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/buttonLizard1"
        android:layout_above="@id/buttonPaper1"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/buttonLizard2"
        android:layout_toLeftOf="@id/buttonRock1"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/buttonRock2"
        android:layout_toLeftOf="@id/buttonPaper1"
        android:layout_above="@id/buttonLizard2"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/buttonScissors1"
        android:layout_toRightOf="@id/buttonPaper1"
        android:layout_alignTop="@id/buttonPaper1"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/buttonPaper2"
        android:layout_below="@id/buttonRock1"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spock"
        android:id="@+id/buttonSpock1"
        android:layout_below="@id/buttonPaper2"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/buttonRock3"
        android:layout_toRightOf="@id/buttonPaper2"
        android:layout_alignTop="@id/buttonPaper2"
        android:onClick="onClick"/>
    />


</RelativeLayout>
